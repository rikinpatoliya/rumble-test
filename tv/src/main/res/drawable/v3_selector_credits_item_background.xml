<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- focused -->
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/rumble_green"/>
            <corners android:radius="8dp" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="12dp"
                android:right="12dp"/>
        </shape>
    </item>

    <!-- checked -->
    <item android:state_checked="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/rumble_green"/>
            <corners android:radius="8dp" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="12dp"
                android:right="12dp"/>
        </shape>
    </item>

    <!-- selected -->
    <item android:state_selected="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/rumble_green"/>
            <corners android:radius="8dp" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="12dp"
                android:right="12dp"/>
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/white_10_percent"/>
            <corners android:radius="8dp" />
            <padding
                android:bottom="10dp"
                android:top="10dp"
                android:left="12dp"
                android:right="12dp"/>
        </shape>
    </item>
</selector>