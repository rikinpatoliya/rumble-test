<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- focused -->
    <item android:state_focused="true">
        <shape
            android:shape="rectangle">
            <solid android:color="@color/rumble_green"/>
            <corners android:radius="999dp" />
        </shape>
    </item>

    <!-- default -->
    <item>
        <shape
            android:shape="rectangle">
            <solid android:color="@color/dark_mode_50_percent"/>
            <stroke android:color="@color/rumble_green"
                android:width="1dp"/>
            <corners android:radius="999dp" />
        </shape>
    </item>
</selector>