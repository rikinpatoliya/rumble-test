<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/alert_dialog_padding_vertical"
    android:paddingHorizontal="@dimen/alert_dialog_padding_horizontal"
    android:orientation="horizontal"
    android:background="@color/dialog_background"
    android:gravity="center_vertical">

    <ImageView
        android:id="@+id/alert_icon"
        android:src="@drawable/icon_alert"
        android:layout_marginEnd="@dimen/rumble_paddingMedium"
        android:layout_width="@dimen/alert_dialog_icon_size"
        android:layout_height="@dimen/alert_dialog_icon_size" />

    <!--    This view is just here to fix an issue where when the icon if invisible a white line appears at the bottom-->
    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/alert_dialog_icon_size" />

    <TextView
        android:id="@+id/message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13sp" />
</LinearLayout>